#!/bin/sh

set -e

case "$(uname -s)" in
  Linux*)
    echo "Linux detected"
    if grep -q Microsoft /proc/version; then
      echo "WSL detected"
    fi
    echo "Updating apt-get..."
    export DEBIAN_FRONTEND=noninteractive
    sudo apt-get update
    echo "Installing packages with apt-get..."
    # Add packages here
    # removed snapd, using generic install
    # ncurses-term provides terminal definitions for modern terminals like Ghostty
    sudo apt-get install -y zsh age ncurses-term

    if ! command -v starship >/dev/null 2>&1; then
      echo "Installing Starship..."
      # Install to /usr/local/bin to ensure it is in PATH. Requires sudo.
      # sh -s -- -y automatically tries to use sudo if destination is not writeable.
      curl -sS https://starship.rs/install.sh | sh -s -- -y > /dev/null 2>&1 || echo "Starship install failed or required interactive sudo"
    else
      echo "Starship already installed, skipping..."
    fi

    if [ ! -f "$HOME/.oh-my-zsh/oh-my-zsh.sh" ]; then
      echo "Installing Oh My Zsh..."
      rm -rf "$HOME/.oh-my-zsh"
      # --unattended: sets up OMZ but does not change shell
      # KEEP_ZSHRC=yes: prevents replacing existing .zshrc
      KEEP_ZSHRC=yes sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --unattended
    else
      echo "Oh My Zsh already installed, skipping..."
    fi
    
    # Change shell to zsh
    CURRENT_SHELL=$(getent passwd "$USER" | cut -d: -f7)
    ZSH_PATH=$(command -v zsh)
    if [ "$CURRENT_SHELL" != "$ZSH_PATH" ]; then
        echo "Changing default shell to $ZSH_PATH..."
        # Try usermod first on Linux (more script friendly than chsh sometimes)
        if command -v usermod >/dev/null 2>&1; then
            sudo usermod -s "$ZSH_PATH" "$USER" || echo "Warning: Failed to change shell with usermod."
        else
            sudo chsh -s "$ZSH_PATH" "$USER" || echo "Warning: Failed to change shell with chsh."
        fi
    fi
    
    echo "Installing Oh My Zsh custom plugins..."
    if [ ! -d "$HOME/.oh-my-zsh/custom/plugins/zsh-autosuggestions" ]; then
      git clone https://github.com/zsh-users/zsh-autosuggestions "$HOME/.oh-my-zsh/custom/plugins/zsh-autosuggestions"
    else
      echo "zsh-autosuggestions already installed, skipping..."
    fi
    
    if [ ! -d "$HOME/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting" ]; then
      git clone https://github.com/zsh-users/zsh-syntax-highlighting "$HOME/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting"
    else
      echo "zsh-syntax-highlighting already installed, skipping..."
    fi
    ;;
  Darwin*)
    echo "macOS detected"
    if ! command -v brew >/dev/null 2>&1; then
      echo "Installing Homebrew..."
      /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    fi
    echo "Installing packages with Homebrew..."
    # Add packages here
    # Check if tools are installed before trying to install/upgrade to save time/errors
    brew install chezmoi zsh ghostty age starship || true

    if [ ! -f "$HOME/.oh-my-zsh/oh-my-zsh.sh" ]; then
      echo "Installing Oh My Zsh..."
      rm -rf "$HOME/.oh-my-zsh"
      KEEP_ZSHRC=yes sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --unattended
    else
      echo "Oh My Zsh already installed, skipping..."
    fi
    
    # Change shell to zsh on macOS
    ZSH_PATH=$(command -v zsh)
    # macOS uses dscl or chsh. chsh on macOS asks for password even with sudo sometimes?
    # In CI, sudo works.
    if [ "$SHELL" != "$ZSH_PATH" ]; then
         echo "Changing default shell to $ZSH_PATH..."
         # Try sudo chsh. If it fails, warn.
         sudo chsh -s "$ZSH_PATH" "$USER" || echo "Warning: Failed to switch shell. You may need to run 'chsh -s $(which zsh)' manually."
    fi
    
    echo "Installing Oh My Zsh custom plugins..."
    if [ ! -d "$HOME/.oh-my-zsh/custom/plugins/zsh-autosuggestions" ]; then
      git clone https://github.com/zsh-users/zsh-autosuggestions "$HOME/.oh-my-zsh/custom/plugins/zsh-autosuggestions"
    else
      echo "zsh-autosuggestions already installed, skipping..."
    fi
    
    if [ ! -d "$HOME/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting" ]; then
      git clone https://github.com/zsh-users/zsh-syntax-highlighting "$HOME/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting"
    else
      echo "zsh-syntax-highlighting already installed, skipping..."
    fi
    ;;
  *)
    echo "Unsupported operating system"
    exit 1
    ;;
esac
